<!--pages/add_money/add_money.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">金币充值</view>
        <view class="page__desc">多从多得，功能强大，物超所值</view>
    </view>
    <view class="page__bd">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="weui-grids">
                 <view class="weui-cells__title">充值金额</view> 
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-label">￥</view>
                        <input class="weui-input" placeholder="请输入充值金额" name="money" type="number" value="{{money}}" />
                    </view>
                    <view class="weui-cell">
                        <button formType="submit" class="weui-btn" type="primary">确认支付</button>
                    </view>
                </view>
            </view>
        </form>
    </view>
</view>