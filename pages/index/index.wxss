/**index.wxss**/
/* @import "..tata/base.wxss"; */
.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

swiper swiper-item {
  width: 100%;
  height: 150rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

/*tab样式*/

.weui-media-box {
  padding: 5px 15px;
  position: relative;
}

/*盘店 招工 求职样式*/

.weui-cells::after {
  border-bottom: none;
}

.weui-cell {
  padding: 6px 15px 6px 25px;
}

.footer {
  margin-top: 10px;
}

/*轮播弹幕*/

.dmswiper {
  padding: 5px 40rpx;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.dmswiper .text-title{
  font-size: 900;
  margin-right: 50rpx;
  padding-left: 50rpx;
  /*color: #e64340; */
}
.dmswiper swiper {
  height: 50rpx;
}

.dmswiper swiper swiper-item {
  width: 100%;
  height: 50rpx;
}

.dmswiper .text-value {
  color: #e64340;
}
